@page
@model UDeal.Pages.Manage.Campuses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Campuses</h1>

<p>
    <a role = "button" class = "btn btn-outline-primary" asp-page="Create" asp-route-type="0">Create New</a>
</p>
<div style="overflow-x: auto">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Campus[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Campus[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Campus[0].School)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Campus) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.School.Name)
                    </td>
                    <td>
                       <a role = "button" class = "btn btn-outline-info mb-2" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        <a role = "button" class = "btn btn-outline-dark mb-2" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        <a role= "button" class = "btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
</div>
@page
@model UDeal.Pages.Manage.Schools.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Schools</h1>

<p>
    <a role = "button" class = "btn btn-outline-dark" asp-page="Create">Create New</a>
</p>

<div style="overflow-x: auto">
   <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.School[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.School[0].Domain)
                </th>
                <th>
                    Users
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.School) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Domain)
                    </td>
                     <td>
                        @Model.Users.Where(u => u.SchoolId == item.Id).Count()
                    </td>
                    <td>
                        <a role = "button" class = "btn btn-outline-info mb-2" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        <a role = "button" class = "btn btn-outline-dark mb-2" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        <a role= "button" class = "btn btn-outline-danger mb-2" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>

</div>
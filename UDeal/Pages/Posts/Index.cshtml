                <a role = "button" class = "btn btn-outline-info" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a role = "button" class = "btn btn-outline-dark" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a role= "button" class = "btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
